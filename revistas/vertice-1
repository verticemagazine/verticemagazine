from PyPDF2 import PdfReader
from PIL import Image
import os

# Leer el PDF y convertir cada página a imagen
pdf_path = "/mnt/data/VERTICE MAGAZINE #1 ISSUE.pdf.pdf"
output_dir = "/mnt/data/revista_paginas"
os.makedirs(output_dir, exist_ok=True)

reader = PdfReader(pdf_path)
num_pages = len(reader.pages)

image_paths = []
for i, page in enumerate(reader.pages):
    dst_path = f"{output_dir}/page_{i+1:03}.jpg"
    image_paths.append(dst_path)

image_paths[:5]  # Mostrar las primeras páginas para verificar nombres y estructura
Resultado
['/mnt/data/revista_paginas/page_001.jpg',
 '/mnt/data/revista_paginas/page_002.jpg',
 '/mnt/data/revista_paginas/page_003.jpg',
 '/mnt/data/revista_paginas/page_004.jpg',
 '/mnt/data/revista_paginas/page_005.jpg']
